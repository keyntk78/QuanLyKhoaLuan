
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Areas/Lecture/Views/Shared/_LayoutLecture.cshtml";
}


<div class="content-body">

    <div class="container-fluid">
        @if (ViewBag.Status != null)
        {
            <div class="col-sm-12 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <div class="alert alert-primary alert-dismissible alert-alt solid fade show">
                    <button type="button" class="close h-100" data-dismiss="alert" aria-label="Close">
                        <span><i class="mdi mdi-close"></i></span>
                    </button>
                    <strong>Thông báo! </strong> @ViewBag.Status
                </div>
            </div>
        }
        <div class="row">
            <div class="col-lg-6 col-sm-6">
                <div class="card">
                    <div class="stat-widget-two card-body">
                        <div class="stat-content">
                            <div class="stat-text">Khóa luận đã chấm điểm </div>
                            <div class="stat-text">(Hướng dẫn)</div>
                            <div class="stat-digit"> @ViewBag.count_thesis_finish</div>
                        </div>
                    </div>
                    <div class="progress">
                        <div class="progress-bar progress-bar-primary w-100" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-sm-6">
                <div class="card">
                    <div class="stat-widget-two card-body">
                        <div class="stat-content">
                            <div class="stat-text">Khóa luận chưa đã chấm</div>
                            <div class="stat-text">(Hướng dẫn)</div>

                            <div class="stat-digit"> @ViewBag.count_thesis_not</div>
                        </div>
                        <div class="progress">
                            <div class="progress-bar progress-bar-pink w-100" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
                <!-- /# card -->
            </div>
            <!-- /# column -->
        </div>
    </div>
</div>

