@model QuanLyKhoaLuan.ModelViews.ChangePassword
@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="content-body">
     <div class="container-fluid">

         <div class="row page-titles mx-0">
             <div class="col-sm-6 p-md-0">
                 <div class="welcome-text">
                     <h4>Đổi mật khẩu</h4>
                 </div>
             </div>
             <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                 <ol class="breadcrumb">
                     <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Bảng điều khiển</a></li>
                     <li class="breadcrumb-item active">Đổi mật khẩu</li>
                 </ol>
             </div>
         </div>
         @using (Html.BeginForm())
         {
             <div class="row">
                 <div class="col-lg-12">
                     <div class="card">
                         <div class="card-header">
                             <div class="card-title"><h4>ĐỔI MẬT KHẨU</h4></div>
                         </div>
                         <div class="card-body">
                             @Html.AntiForgeryToken()

                             <div class="form-horizontal">
                                 <div class="form-group">
                                     <label class="pl-4">Mật khẩu củ</label>
                                     <div class="col-md-6">
                                         @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                                         @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                     </div>
                                 </div>
                                 <div class="form-group">
                                     <label class="pl-4">Mật khẩu mới</label>
                                     <div class="col-md-6">
                                         @Html.EditorFor(model => model.newPassword, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                                         @Html.ValidationMessageFor(model => model.newPassword, "", new { @class = "text-danger" })
                                     </div>
                                 </div>
                                 <div class="form-group">
                                     <label class="pl-4">Nhập lại mật khẩu mới</label>
                                     <div class="col-md-6">
                                         @Html.EditorFor(model => model.confirmPassword, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                                         @Html.ValidationMessageFor(model => model.confirmPassword, "", new { @class = "text-danger" })
                                     </div>
                                 </div>
                                 @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                 <div class="form-group">
                                     <div class="col-md-offset-2 col-md-10">
                                         <input type="submit" value="Đổi mật khẩu" class="btn btn-primary" />
                                     </div>
                                 </div>
                             </div>
                         </div>
                     </div>
                 </div>

             </div>
         }


     </div>
</div>