@model IEnumerable<QuanLyKhoaLuan.Models.Class>

@{
    ViewBag.Title = "Danh sách lớp";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Danh sách lớp</h4>
                </div>
            </div>

            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Bảng điều khiển</a></li>
                    <li class="breadcrumb-item active"><span href="#">Danh sách lớp</span></li>
                </ol>
            </div>
        </div>

        @if (ViewBag.Status != null)
        {
            <div class="col-sm-12 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <div class="alert alert-primary alert-dismissible alert-alt solid fade show">
                    <button type="button" class="close h-100" data-dismiss="alert" aria-label="Close">
                        <span><i class="mdi mdi-close"></i></span>
                    </button>
                    <strong>Thông báo! </strong> @ViewBag.Status
                </div>
            </div>
        }
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="col-sm-3 p-md-0">
                            <div class="welcome-text">
                                <a href="@Url.Action("Create", "Classes")" class="btn btn-primary">Thêm lớp</a>
                            </div>
                        </div>
                        <div class="col-sm-9 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                            <select class="form-control col-3 mr-2" id="select_department_id">
                                <option value="">--- Khoa ---</option>
                                @foreach (var item in ViewBag.department)
                                {
                                    <option value="@item.department_id">@item.name</option>
                                }
                            </select>
                            <select class="form-control col-4 mr-2" id="select_major_id">
                                <option value="">--- Bộ môn ---</option>
                                @foreach (var item in ViewBag.major)
                                {
                                    <option value="@item.major_id">@item.name</option>
                                }
                            </select>
                            <input type="text" class="form-control col-3 pl-2 mr-2" id="keywork" placeholder="Tìm kiếm ..." />
                            <button type="button" class="btn btn-primary" id="btnSearch">Tìm kiếm</button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive table">
                            <table class="table table-bordered table-striped text-table-color verticle-middle table-responsive-sm col-12">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Mã lớp</th>
                                        <th>Tên lớp</th>
                                        <th>Bộ môn</th>
                                        <th>Khoa</th>
                                        <th>Chức năng</th>
                                    </tr>

                                </thead>
                                <tbody id="show_data">
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="5" class="pagination-none-boder" id="pagination">
                                        </td>
                                        <td class="pagination-none-boder">
                                            <div class="row d-flex justify-content-end">
                                                <p class="col-4 pt-2">Hiển thị</p>
                                                <select class="form-control col-3" id="pageSize">
                                                    <option value="5" selected>5</option>
                                                    <option value="10">10</option>
                                                    <option value="15">15</option>
                                                    <option value="20">20</option>
                                                </select>
                                                <p class="col-4 pt-2">Dòng</p>
                                            </div>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    Html.RenderPartial("_DetailPartialView");
}




@section scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/Scripts/Controller/classesControler.js?t=@DateTime.Now"></script>
}