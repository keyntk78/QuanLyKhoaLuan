@model QuanLyKhoaLuan.Models.Major

@{
    ViewBag.Title = "Thêm bộ môn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<<div class="content-body">
    <div class="container-fluid">

        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Thêm bộ môn</h4>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Bảng điều khiển</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Majors")">Danh sách bộ môn</a></li>
                    <li class="breadcrumb-item active">Thêm bộ môn</li>
                </ol>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header">

                            <div class="col-sm-12 p-md-0 justify-content-sm-star mt-2 mt-sm-0 d-flex">
                                <h4>Thông tin bộ môn</h4>
                            </div>
                        </div>
                        <div class="card-body">
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <div class="form-group">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label class="pl-4">Mã bộ môn <span class="text-red">(*)</span></label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.code, new { htmlAttributes = new { @class = "form-control", placeHolder = "Nhập mã bộ môn ..." } })
                                        @Html.ValidationMessageFor(model => model.code, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="pl-4">Tên bộ môn <span class="text-red">(*)</span></label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", placeHolder = "Nhập tên bộ môn ..." } })
                                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="pl-4">Khoa <span class="text-red">(*)</span></label>
                                    <div class="col-md-10">
                                        @Html.DropDownList("department_id", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.department_id, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="pl-4">Mô tả</label>
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(model => model.description, new { @class = "form-control", @rows = 10, id = "desc" })
                                        @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card p-bt90">
                        <div class="card-body">

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10 text-center">
                                    <input type="submit" value="Thêm" class="btn btn-primary" />
                                    <input type="button" id="btn-reset" value="Reset" class="btn btn-danger ml-3" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>