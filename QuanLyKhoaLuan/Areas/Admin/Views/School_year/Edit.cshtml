@model QuanLyKhoaLuan.Models.School_year

@{
    ViewBag.Title = "Cập nhật niên khóa";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<<div class="content-body">
    <div class="container-fluid">

        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Cập nhật niên khóa</h4>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Bảng điều khiển</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "School_year")">Danh sách niên khóa</a></li>
                    <li class="breadcrumb-item active">Cập nhật niên khóa</li>
                </ol>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header">

                            <div class="col-sm-12 p-md-0 justify-content-sm-star mt-2 mt-sm-0 d-flex">
                                <h4>Thông tin niên khóa</h4>
                            </div>
                        </div>
                        <div class="card-body">
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.school_year_id)

                            <div class="form-horizontal">
                                <div class="form-group">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label class="pl-4">Niên khóa</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", placeHolder = "Nhập niên khóa ...", id = "name" } })
                                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="pl-4">Thời gian bắt đầu</label>
                                    <div class="col-md-10">
                                        <input type="date" class="form-control" value="@Model.start_date.ToString("yyyy-MM-dd")" name="start_date" id="date-start" />
                                        @*@Html.EditorFor(model => model.start_date, new { htmlAttributes = new { @class = "form-control", type = "Date", id = "date-start" } })*@
                                        @Html.ValidationMessageFor(model => model.start_date, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="pl-4">Thời gian kết thúc</label>
                                    <div class="col-md-10">
                                        <input type="date" class="form-control" value="@Model.end_date.ToString("yyyy-MM-dd")" name="end_date" id="date-end" />
                                        @*@Html.EditorFor(model => model.end_date, new { htmlAttributes = new { @class = "form-control", type = "Date", id = "date-end" } })*@
                                        @Html.ValidationMessageFor(model => model.end_date, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card p-bt90">
                        <div class="card-body">

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10 text-center">
                                    <input type="submit" value="Cập nhật" class="btn btn-primary" />
                                    <input type="button" id="btn-reset" value="Reset" class="btn btn-danger ml-3" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section scripts {
    <script>
        $(function () {
            // đăng ký sự kiên click
            $('#btn-reset').click(function () {
                $("#name").val("");
                $("#date-end").val("");
                $("#date-start").val("");
            });
        });
    </script>
}
